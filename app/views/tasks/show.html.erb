<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>
  <% if @task.completed %>
    <%= "This task is completed" %>
  <% else %>
    <%= "This task is not completed yet" %>
  <% end %>
</p>
<%= link_to "Return to all the tasks", tasks_path %>
<%= link_to "Edit this task", edit_task_path(@task) %>
