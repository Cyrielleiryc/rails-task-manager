<%= form_with model: task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
  <%= f.label :details %>
  <%= f.text_field :details, class: "form-control" %>
  <% if task.persisted? %>
    <%= f.check_box :completed %>
    <%= f.label :completed %>
  <% end %>
  <%= f.submit %>
<% end %>
<div class="footer">
  <%= link_to tasks_path do %>
    <i class="fa-solid fa-rotate-left"></i> Back to list
  <% end %>
</div>
